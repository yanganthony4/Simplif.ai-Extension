{
    "manifest_version": 3,
    "name": "Simplif.ai",
    "version": "1.0",
    "description": "Grab text from long paragraphs on websites",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["http://*/*", "https://*/*"],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Simplif.ai"
    }
  }
  