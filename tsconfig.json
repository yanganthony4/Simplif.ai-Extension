{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": false,
    "strict": true,
    "noEmit": false,            // ✅ Allows TypeScript to compile
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node", // ✅ Standard Webpack/Vite resolution
    "resolveJsonModule": true,
    "isolatedModules": false,   // ✅ Helps with build tools
    "jsx": "react-jsx",         // ✅ For React 17+ JSX transform
    "incremental": true,
    "typeRoots": ["node_modules/@types"],
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/": ["./src/"]
    }
  },
  "include": ["src//*.ts", "src//*.tsx"],
  "exclude": ["node_modules", "dist"]
}