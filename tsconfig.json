{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,  // ✅ ALLOW TypeScript to compile files
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",  // ✅ Standard Webpack resolution
    "resolveJsonModule": true,
    "isolatedModules": false,  // ✅ Fix Webpack build issues
    "jsx": "react-jsx",  // ✅ Ensures JSX compiles properly
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],  
  "exclude": ["node_modules", "dist"]  
}
